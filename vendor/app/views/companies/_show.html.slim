.row.location_all
  h4.header 注册信息
  .span12
    .row-fluid
      dl.dl-horizontal
        .span5
          dt 公司简称
          dd= @company.company_name
        .span5
          dt 公司全称
          dd = @company.company_full_name
        .span5
          dt 营业执照
          dd = @company.taxpayer_code
        .span5
          dt 注册资金
          dd = @company.reg_money
  h4.header 公司资料
  .span12
    .row-fluid
      dl.dl-horizontal
        .span5
          dt 联系人
          dd = @company.link_man
        .span5
          dt 联系人电话
          dd = @company.link_man_phone
        .span5
          dt 公司电话
          dd = @company.phone
        .span5
          dt 传真号码
          dd = @company.fax
        .span5
          dt 电子邮箱
          dd = @company.email
        .span5
          dt 办公地址
          dd
            span.company_view = @company.city.try(:city_name)
            span.company_view = @company.district.try(:district_name)
            span.company_view = @company.address
  .span12
    .row-fluid
      .span1 = link_to companies_path  do
        button class="btn" 返回
      .span2 = link_to edit_company_path(@company.id),:remote=>true do
        button class="btn" 编辑


