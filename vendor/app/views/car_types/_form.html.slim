=simple_form_for @car_type do |f|
  = f.input :car_type_code, :label => '车型编码'
  = f.input :car_type_name, :label => '车型名称'
  = f.input :description, :label => '描述'
  = f.input :persons, :label => '座位数'
  = f.input :big_package, :label => '大行李'
  = f.input :small_package, :label => '小行李'
  = f.input :car_type_img_url, :as => :file, :label => '车型图片'
  = f.input :status, collection: CarType.status_list, :as=>:radio_buttons, :checked=>@car_type[:status] || 1, :label=>'状态'
  = f.submit :value => '提交'
