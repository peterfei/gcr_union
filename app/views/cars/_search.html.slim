-if @search.present?
  = simple_form_for @search  ,  :html => {:class => 'form-horizontal' },wrapper: 'bootstrap',validate:false do |f|
    fieldset
      #legend
        .row-fluid
          .span5=f.input :car_tag_equals,input_html:{class:"search-query"}
          .span5
            =f.input :status_equals,collection:Car.status.options,placeholder:"全部",input_html:{class:"search-query"},label:"车辆状态"
          /.span5=f.association :car_model_car_model_equals,input_html:{class:"search-query"}
          /.span5=f.input :location_equals,input_html:{class:"search-query"}
        .control-group
          .controls
            =f.submit value:"查询",class: "btn btn-small"
