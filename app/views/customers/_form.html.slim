    = f.text_field :customer_code
  .field
    = f.label :customer_name
    = f.text_field :customer_name
  .field
    = f.label :sex
    = f.number_field :sex
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :identity_type_name
    = f.text_field :identity_type_name
  .field
    = f.label :identity_code
    = f.text_field :identity_code
  .field
    = f.label :login_name
    = f.text_field :login_name
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :cus_type
    = f.number_field :cus_type
  .field
    = f.label :creater
    = f.text_field :creater
  .field
    = f.label :guding_phone
    = f.text_field :guding_phone
  .actions = f.submit 'Save'
